<header class="d-flex flex-row-nowrap justify-content-center p-20">

	<div class="content flex-fill d-flex flex-row-nowrap justify-content-between align-item-center">
		
		<a href="{{ path('home') }}" class="header-logo">
			<img src="{{ asset('build/images/favicon.png')}}"><span>Wonder</span>
		</a>

		<div id="search" class="header-search p-10 flex-fill d-flex flex-row align-item-center">
			<i class="fas fa-search mr-10"></i>
			<input @input="updateInput" ref="input" type="text" class="flex-fill">
			<img v-if="isLoading" src="{{ asset('./build/images/loading.gif') }}" alt="loading" class="header-search-loading">
			<ul class="header-search-result d-flex flex-column" v-if="questions?.length">
				<a v-for="question in questions" :key="question.id" v-bind:href="'/question/' + question.id">${ question.title }$</a>
			</ul>
		</div>

		{% if is_granted('IS_AUTHENTICATED_FULLY') %}

			<div class="d-flex flex-row-nowrap justify-content-center hide-xs" >
				<a href="{{ path('current_user')}}">
					<img src="{{ asset(app.user.picture) }}" class="avatar avatar-lg mr-10">
				</a>
				<small class="d-flex flex-column justify-content-center"><a href="{{ path('logout') }}">DÃ©connexion</a></small>
			</div>

		{% else %}
		
			<div class="hide-xs">
				<a href="{{ path('signup') }}" class="btn btn-primary mr-5">Inscription</a>
				<a href="{{ path('login') }}" class="btn btn-primary-stroke">Connexion</a>
      		</div>

		{% endif %}

		<div class='show-xs burger'><i class="fa-solid fa-bars"></i> </div>
		
	</div>

</header>
