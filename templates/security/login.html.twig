{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
  <div class="block">
    <form method="post">
      {% if app.user %}
          <div class="mb-3">
              You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
          </div>
      {% endif %}

      <h2 class="pb-30">Connexion</h2>
      <div class="form-row">
        <label for="inputEmail">Email</label>
        <input type="email" value="{{ last_username }}" name="email" id="inputEmail" autocomplete="email" required autofocus>
      </div>
      <div class="form-row">
        <label for="inputPassword">Mot de passe</label>
        <input type="password" name="password" id="inputPassword" autocomplete="current-password" required>
      </div>
      <div class="form-row">
          <label>
              <input type="checkbox" name="_remember_me"> Remember me
          </label>
      </div>

      {% if error %}
        <ul class="form-errors mb-20">
            <li>{{ error.messageKey|trans(error.messageData, 'security') }}</li>
        </ul>
      {% endif %}

      <div class="d-flex flex-row">
        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

        <button class="btn btn-primary mr-10" type="submit">
          Se connecter
        </button>
        <div class="d-flex flex-column">
        <small><a href="{{ path('signup') }}">Vous n'avez pas encore de compte ?</a></small>
        <small><a href="{{ path('reset-password-request') }}">Vous avez oubli√© votre mot de passe ?</a></small>
        </div>
      </div>
      


    </form>
  </div>
{% endblock %}
